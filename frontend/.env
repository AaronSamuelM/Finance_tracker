# ============================================
# BACKEND .env TEMPLATE
# ============================================
# Copy this to backend/.env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/finance-tracker
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/finance-tracker

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
JWT_EXPIRE=7d

# Google OAuth Configuration (Get from Google Cloud Console)
GOOGLE_CLIENT_ID=your-google-client-id-from-console
GOOGLE_CLIENT_SECRET=your-google-client-secret-from-console
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# Frontend Configuration
CLIENT_URL=http://localhost:3000

# ============================================
# FRONTEND .env TEMPLATE  
# ============================================
# Copy this to frontend/.env and fill in your values

# API Configuration
REACT_APP_API_URL=http://localhost:5000/api

# Optional: Enable/Disable features
REACT_APP_ENABLE_GOOGLE_OAUTH=true
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_DEFAULT_CURRENCY=USD

# ============================================
# PRODUCTION ENVIRONMENT EXAMPLES
# ============================================

# Backend Production (.env.production)
NODE_ENV=production
PORT=5000
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/finance-tracker-prod
JWT_SECRET=very-long-random-production-secret-key-generate-new-one
JWT_EXPIRE=24h
GOOGLE_CLIENT_ID=production-google-client-id
GOOGLE_CLIENT_SECRET=production-google-client-secret
GOOGLE_CALLBACK_URL=https://your-backend-domain.com/api/auth/google/callback
CLIENT_URL=https://your-frontend-domain.com

# Frontend Production (.env.production)
REACT_APP_API_URL=https://your-backend-domain.com/api
REACT_APP_ENABLE_GOOGLE_OAUTH=true
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_DEFAULT_CURRENCY=INR

# ============================================
# DOCKER ENVIRONMENT EXAMPLE
# ============================================

# docker-compose.yml environment
MONGODB_URI=mongodb://mongodb:27017/finance-tracker
JWT_SECRET=docker-development-secret-key
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback
CLIENT_URL=http://localhost:3000
REACT_APP_API_URL=http://localhost:5000/api

# ============================================
# SECURITY NOTES
# ============================================
# 
# 1. Never commit .env files to version control
# 2. Use strong, unique JWT secrets in production
# 3. Rotate secrets regularly
# 4. Use HTTPS URLs in production
# 5. Restrict Google OAuth origins to your domains
# 6. Use MongoDB Atlas IP whitelist in production
# 7. Enable MongoDB authentication in production
#
# ============================================